generator client {
  provider            = "prisma-client-js"
  output              = "../libs/prisma/src/generated"
  importFileExtension = "ts"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id     String      @id @unique
  type   AccountType
  userId String      @unique
  user   User        @relation(fields: [userId], references: [id])
}

model User {
  id              String   @id @unique
  createdAt       DateTime @default(now())
  email           String?
  name            String?
  profileImageUrl String?
  region          String?
  interests       String[]
  budget          Int?
  account         Account?
  token           Token?
}

model Token {
  id        Int      @id @default(autoincrement())
  userId    String   @unique
  token     String   @unique
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum AccountType {
  GOOGLE
  KAKAO
  NAVER
}
