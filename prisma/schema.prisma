generator client {
  provider            = "prisma-client-js"
  output              = "../libs/prisma/src/generated"
  importFileExtension = "ts"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id     String      @id @unique
  type   AccountType
  userId String      @unique
  user   User        @relation(fields: [userId], references: [id])
}

model User {
  id              String   @id @unique
  createdAt       DateTime @default(now())
  email           String?
  name            String?
  profileImageUrl String?
  region          String?
  interests       String[]
  budget          Int?
  account         Account?
  token           Token?
}

model Token {
  userId    String   @unique
  token     String   @unique
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Course {
  id                Int        @id @default(autoincrement())
  createdAt         DateTime   @default(now())
  title             String
  courseDescription String     @db.Text
  budget            Int?
  region            String?
  places            Place[]
  bookmarks         Bookmark[]
  views             View[]
}

model Place {
  id          Int     @id @default(autoincrement())
  order       Int
  place       String
  description String  @db.Text
  link        String?
  courseId    Int
  course      Course  @relation(fields: [courseId], references: [id])
}

model Bookmark {
  id       Int    @id @default(autoincrement())
  userId   String
  courseId Int
  course   Course @relation(fields: [courseId], references: [id])
}

model View {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  courseId  Int
  userId    String
  course    Course   @relation(fields: [courseId], references: [id])

  @@unique([courseId, userId])
}

enum AccountType {
  GOOGLE
  KAKAO
  NAVER
}
